{
  "name": "board-game",
  "version": "0.0.0",
  "description": "board-game",
  "main": "sorce/server.js",
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "harmony": true
        }
      ]
    ]
  },
  "dependencies": {
    "bootstrap": "~3.3.1",
    "chance": "^0.7.3",
    "express": "~4.10.6",
    "fibers": "~1.0.4",
    "flux": "^2.0.1",
    "node-jsx": "~0.12.4",
    "react": "~0.12.2",
    "react-router": "^0.11.6",
    "serve-favicon": "^2.2.0",
    "socket.io": "^1.2.1",
    "socket.io-client": "^1.2.1",
    "underscore": "^1.7.0"
  },
  "devDependencies": {
    "browserify": "^8.0.3",
    "connect-browserify": "^3.2.1",
    "jscs": "^1.10.0",
    "jshint": "^2.6.0",
    "less": "~2.2.0",
    "parallelshell": "~1.0.3",
    "reactify": "^0.17.1",
    "rimraf": "~2.2.8",
    "supervisor": "~0.6.0",
    "watch": "^0.13.0"
  },
  "scripts": {
    "clean": "rimraf -f build",
    "less": "lessc source/client/style/app.less > build/app.css",
    "lint": "jshint source | jscs",
    "watch:js": "supervisor -i node_modules -e js,jsx --debug source/server.js",
    "watch:less": "watch \"npm run less\" source/client/style/",
    "watch": "parallelshell \"npm run watch:less\" \"npm run watch:js\"",
    "serve": "npm run clean && mkdir build && npm run watch"
  }
}
